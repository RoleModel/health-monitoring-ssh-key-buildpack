#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

# Generates an SSH config file for connections if a config var exists.

ENV_DIR=$3

if [[ -f $ENV_DIR/HEALTH_MONITORING_SSH_KEY && -f $ENV_DIR/HEALTH_MONITORING_SSH_KEY_HOSTS ]]; then

  echo "" >&1

  # Ensure we have an ssh folder
  if [ ! -d ~/.ssh ]; then
    mkdir -p ~/.ssh
    chmod 700 ~/.ssh
  fi

  # Load the private key into custom_key file.
  base64 --decode $ENV_DIR/HEALTH_MONITORING_SSH_KEY > ~/.ssh/health_monitoring_key

  # Change the permissions on the file to
  # be read-only for this user.
  chmod 400 ~/.ssh/health_monitoring_key

  # Split $HEALTH_MONITORING_SSH_KEY_HOSTS
  IFS=',' ;for element in `cat $ENV_DIR/HEALTH_MONITORING_SSH_KEY_HOSTS`;
  do
    echo -e "Host $element\n"\
            "  IdentityFile ~/.ssh/health_monitoring_key\n"\
            "  IdentitiesOnly yes\n"\
            "  UserKnownHostsFile=/dev/null\n"\
            "  StrictHostKeyChecking no"\
            >> ~/.ssh/config
  done

  echo "-----> Successfully added system health monitoring SSH key"

fi
